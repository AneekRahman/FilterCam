<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraPostViewActivity"
    android:background="#282828">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/capture_screen_layout">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/camera_preview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Error. Try again"
                android:textColor="#76ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="40dp"
                android:textAlignment="center"
                android:layout_marginLeft="40dp"
                android:id="@+id/cam_error_view" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#35ffffff"
                android:text="GRANT PERMISSION"
                android:textColor="#76ffffff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:id="@+id/grant_permission_btn"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/capture_btn_stroke"
            android:layout_marginBottom="70dp"
            android:padding="10dp"
            android:id="@+id/capture_btn_holder">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_camera_icon_big"
                android:background="@drawable/cam_capture_btn_bg"
                android:padding="20dp"
                android:id="@+id/capture_btn"/>

        </RelativeLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/capture_btn_holder"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="83dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_phone_rear_rotate_icon"
            android:id="@+id/switch_cam_btn"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left_icon"
            android:elevation="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentStart="true"
            android:id="@+id/back_btn"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter0"
                    android:text="0"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter1"
                    android:text="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter2"
                    android:text="2"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter3"
                    android:text="3"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter4"
                    android:text="4"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter5"
                    android:text="5"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter6"
                    android:text="6"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter7"
                    android:text="7"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter8"
                    android:text="8"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter9"
                    android:text="9"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter10"
                    android:text="10"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter11"
                    android:text="11"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter12"
                    android:text="12"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter13"
                    android:text="13"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter14"
                    android:text="14"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter15"
                    android:text="15"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter16"
                    android:text="16"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter17"
                    android:text="17"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter18"
                    android:text="18"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter19"
                    android:text="19"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter20"
                    android:text="20"/>

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/postview_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/image_postview_IV"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/cam_capture_btn_bg"
            android:text="SAVE"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:drawableLeft="@drawable/ic_save_file_icon"
            android:id="@+id/save_btn"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/capture_btn_stroke"
            android:padding="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh_icon"
                android:background="@drawable/cam_capture_btn_bg"
                android:padding="10dp"
                android:id="@+id/redo_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/capture_btn_stroke"
            android:padding="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_icon"
                android:background="@drawable/cam_capture_btn_bg"
                android:padding="10dp"
                android:id="@+id/check_btn"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
